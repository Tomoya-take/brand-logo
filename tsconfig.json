{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "outDir": "build",
    "noImplicitAny": false,
    "baseUrl": "./",
    "allowImportingTsExtensions": false
  },
  "include": [
    "app/**/*",
    "server.ts",
    "webhooks.ts",
    "global.d.ts"
  ]
}




