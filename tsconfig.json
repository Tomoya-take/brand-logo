{
  "compilerOptions": {
    "target": "ES2019",                  // Node 20 なら ES2019 で十分
    "module": "CommonJS",                // CommonJS にする
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "outDir": ".",                       // build ではなくカレントに出力
    "rootDir": ".", 
    "noEmitOnError": false,
    "noImplicitAny": false,
    "baseUrl": "app",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": [
    "app",
    "server.ts",
    "webhooks.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}







