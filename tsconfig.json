{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "outDir": "build",
    "rootDir": ".",           // 入力は app/ に限定
    "noEmitOnError": false,
    "noImplicitAny": false,
    "baseUrl": "app",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": [
    "app",          // app 以下だけ
    "server.ts",
    "webhooks.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"         // build はコンパイル対象から除外
  ]
}








